<UserControl x:Class="MVVMProjectView.Views.NewUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMProjectView.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Add new user" HorizontalAlignment="Left" VerticalAlignment="Top" Height="61" FontSize="36" Margin="84,14,0,0"/>

        <Label Content="Username:" HorizontalAlignment="Left" Margin="78,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbBox" Text="{Binding username, Mode=TwoWay}" HorizontalAlignment="Left" Height="23" Margin="149,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="82,123,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pwBox" PasswordChanged="PasswordBox_PasswordChanged" HorizontalAlignment="Left" Margin="149,126,0,0" VerticalAlignment="Top" Width="120" Height="23"/>

        <Button Content="Create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="167,167,0,0" Click="BtnCreate_Click"/>
    </Grid>
</UserControl>
